<% provide :title, t("signup.title") %>
<h1 style="text-align: center;"><%= t("signup.title") %></h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for @user, url: signup_path do |f| %>
    <%= render "shared/error_messages" %>
    <%= f.label :name ,t("signup.name")%>
    <%= f.text_field :name %>
    <%= f.label :email ,t("signup.email")%>
    <%= f.email_field :email %>
    <%= f.label :password ,t("signup.password")%>
    <%= f.password_field :password %>
    <%= f.label :password_confirmation, t("signup.confirmation") %>
    <%= f.password_field :password_confirmation %>
    <%= f.submit t("signup.create_my_account"), class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
